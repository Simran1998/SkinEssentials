<!DOCTYPE html>
<html>
  <head>
    <title>Fp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css">

     <script src="https://js.stripe.com/v3"></script>
  </head>

  <body>
   <section class= "container is-responsive">
<%= render partial:'shared/header'%>
<nav class="breadcrumb" style= "display: flex">
    <%= breadcrumbs(params[:controller], params[:action]) %>
  </nav>

<nav class="navbar-end" id="cart_nav">


          <%= link_to "Cart", cart_index_path%>
          <sup><%= cart.size %></sup>

            <% if cart.present? %>


              <ul>
                <% cart.each do |p| %>
                  <li>

  <%= hidden_field_tag :id, p.id %>
  <%= number_field_tag :quantity, session[:shopping_cart][p.id], min: 1 %>
  <%= submit_tag "Update Quantity" %>

                    <%= p.name %> <%= button_to 'âˆ’', cart_path(p), method: :delete %>
                  </li>
                <% end %>
              </ul>
            <% end %>

      </nav>





<% if flash[:notice] %>
        <p>
          <%= flash[:notice] %>
        </p>
      <% end %>


    <%= yield %>
    </section>

  </body>
</html>

